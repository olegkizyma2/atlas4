{
  "name": "@atlas/config-manager",
  "version": "4.0.0",
  "description": "Централізована система управління конфігураціями ATLAS",
  "type": "module",
  "main": "config-manager.js",
  "bin": {
    "atlas-config": "./config-cli.js",
    "sync-configs": "./sync-configs.js"
  },
  "scripts": {
    "sync": "node sync-configs.js",
    "sync:backup": "node sync-configs.js --backup",
    "status": "node config-cli.js status",
    "validate": "node config-cli.js validate",
    "watch": "node config-cli.js watch",
    "backup": "node config-cli.js backup",
    "init": "node config-cli.js init",
    "cleanup": "node config-cli.js cleanup",
    "test": "node test-config.js"
  },
  "keywords": [
    "atlas",
    "configuration",
    "management",
    "sync",
    "workflow"
  ],
  "dependencies": {
    "commander": "^12.0.0",
    "chokidar": "^3.6.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atlas/workflow.git",
    "directory": "config"
  },
  "author": "Atlas Team",
  "license": "MIT"
}