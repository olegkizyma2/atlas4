        echo "  ./goose-monitor live         # Real-time –º–æ–Ω—ñ—Ç–æ—Ä–∏–Ω–≥"
        echo "  ./goose-monitor list         # –°–ø–∏—Å–æ–∫ —Å–µ—Å—ñ–π"
        ;;
    *)
        echo "‚ùå –ù–µ–≤—ñ–¥–æ–º–∞ –∫–æ–º–∞–Ω–¥–∞: $1"
        echo "üí° –í–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É–π—Ç–µ: ./goose-monitor help"
