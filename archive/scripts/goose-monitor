case "${1:-latest}" in
    "latest"|"l")
        echo "üîç –ü–æ–∫–∞–∑—É—é –æ—Å—Ç–∞–Ω–Ω—ñ –∑–∞–ø–∏—Å–∏..."
        "$SCRIPT_DIR/watch_goose_latest.sh"
