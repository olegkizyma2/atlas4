    "live"|"r")
        echo "üîÑ –ó–∞–ø—É—Å–∫–∞—é real-time –º–æ–Ω—ñ—Ç–æ—Ä–∏–Ω–≥..."
        "$SCRIPT_DIR/watch_goose_live.sh"
        ;;
    "list"|"ls")
        echo "üìä –ü–æ–∫–∞–∑—É—é —Å–ø–∏—Å–æ–∫ —Å–µ—Å—ñ–π..."
        "$SCRIPT_DIR/list_goose_sessions.sh"
        ;;
    "help"|"h")
        echo "ü§ñ Goose Monitor - –£—Ç–∏–ª—ñ—Ç–∞ –¥–ª—è –º–æ–Ω—ñ—Ç–æ—Ä–∏–Ω–≥—É —Å–µ—Å—ñ–π"
        echo ""
        echo "–í–∏–∫–æ—Ä–∏—Å—Ç–∞–Ω–Ω—è:"
        echo "  ./goose-monitor [–∫–æ–º–∞–Ω–¥–∞]"
        echo ""
        echo "–ö–æ–º–∞–Ω–¥–∏:"
        echo "  latest, l    - –ü–æ–∫–∞–∑–∞—Ç–∏ –æ—Å—Ç–∞–Ω–Ω—ñ –∑–∞–ø–∏—Å–∏ –∑ –Ω–∞–π—Å–≤—ñ–∂—ñ—à–æ—ó —Å–µ—Å—ñ—ó"
        echo "  live, r      - Real-time –º–æ–Ω—ñ—Ç–æ—Ä–∏–Ω–≥ (–æ–Ω–æ–≤–ª–µ–Ω–Ω—è –∫–æ–∂–Ω—ñ 3 —Å–µ–∫)"
        echo "  list, ls     - –°–ø–∏—Å–æ–∫ –≤—Å—ñ—Ö —Å–µ—Å—ñ–π"
        echo "  help, h      - –ü–æ–∫–∞–∑–∞—Ç–∏ —Ü—é –¥–æ–≤—ñ–¥–∫—É"
        echo ""
        echo "–ü—Ä–∏–∫–ª–∞–¥–∏:"
